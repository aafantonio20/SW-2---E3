<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ObtenerCategorias</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.ObtenerCategorias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuardarProducto</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.GuardarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerProductos</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.ObtenerProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerDetalleProducto</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.VerDetalleProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProducto</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.EliminarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarProducto</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.ModificarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerCartaActiva</servlet-name>
        <servlet-class>pe.edu.ulima.servlets.VerCartaActiva</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ObtenerCategorias</servlet-name>
        <url-pattern>/obtenercategorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuardarProducto</servlet-name>
        <url-pattern>/guardarproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerProductos</servlet-name>
        <url-pattern>/obtenerproductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerDetalleProducto</servlet-name>
        <url-pattern>/verdetalleproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProducto</servlet-name>
        <url-pattern>/eliminarproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarProducto</servlet-name>
        <url-pattern>/modificarproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerCartaActiva</servlet-name>
        <url-pattern>/vercartaactiva</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
